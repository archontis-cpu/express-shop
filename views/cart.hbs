<h1>Cart</h1>

<div id="cart">
  {{#if courses.length}}
    <table>
      <thead>
        <tr>
          <th>
            Name
          </th>
          <th>
            Count
          </th>
          <th>
            Actions
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each courses}}
        <tr>
          <td>{{title}}</td>
          <td>{{count}}</td>
          <td>
            <button class="btn btn-small js-remove" data-id="{{id}}">
              Delete
            </button>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    <p>
      <b>Price: <span class="price">{{price}}</span></b>
    </p>
  {{else}}
    <p>Cart is empty</p>
  {{/if}}
</div>